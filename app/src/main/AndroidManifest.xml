<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kotlin.cryptofication"
    android:theme="@style/Theme.CryptOficatioNKotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_transparent"
        android:label="@string/app_name"
        android:name=".ui.view.CryptOficatioNApp"
        android:roundIcon="@mipmap/ic_logo_transparent_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptOficatioNKotlin"
        android:fullBackupContent="true">
        <activity android:name="com.kotlin.cryptofication.ui.view.MainActivity"/>
        <activity
            android:name="com.kotlin.cryptofication.ui.view.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>