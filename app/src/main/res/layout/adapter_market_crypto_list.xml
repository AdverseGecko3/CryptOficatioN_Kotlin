<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayoutMarket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivAdapterMarketIcon"
        android:layout_width="0dp"
        android:layout_height="35sp"
        android:contentDescription="@string/CONTENT_CRYPTO_IMAGE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvAdapterMarketSymbol"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tvAdapterMarketSymbol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/llAdapterMarketNamePrice"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintStart_toEndOf="@id/ivAdapterMarketIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/HOLDER_CRYPTO_NAME" />

    <LinearLayout
        android:id="@+id/llAdapterMarketNamePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/llAdapterMarketPercentage"
        app:layout_constraintHorizontal_weight="20"
        app:layout_constraintStart_toEndOf="@id/tvAdapterMarketSymbol"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAdapterMarketName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/text"
            android:textSize="13sp"
            tools:text="@string/HOLDER_CRYPTO_SYMBOL" />

        <TextView
            android:id="@+id/tvAdapterMarketPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="15sp"
            tools:text="@string/HOLDER_CRYPTO_NAME" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdapterMarketPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintStart_toEndOf="@id/llAdapterMarketNamePrice"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAdapterMarketIconPriceChange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:contentDescription="@string/CONTENT_CRYPTO_STATUS"
            tools:src="@drawable/ic_arrow_drop_up" />

        <TextView
            android:id="@+id/tvAdapterMarketTextPriceChange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="13sp"
            tools:text="@string/HOLDER_CRYPTO_PRICE_CHANGE_PERCENTAGE_24H" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>