<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptOficatioNKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_app_accent</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sansation</item>
        <item name="android:alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Splash screen -->
        <item name="android:windowBackground">@drawable/splash_background_night</item>
    </style>

    <style name="DialogListPreference" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_round</item>
        <item name="android:colorControlActivated">@color/purple_app_accent</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_round</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/sansation</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_round</item>
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/purple_background</item>
        <item name="android:numbersTextColor">@color/text</item>
        <item name="android:numbersSelectorColor">@color/purple_app_accent</item>
        <item name="android:numbersBackgroundColor">@color/purple_background</item>
        <item name="android:background">@color/purple_background</item>
    </style>
</resources>